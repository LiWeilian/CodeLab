<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:winform="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <WindowsFormsHost x:Name="navHost" Margin="10,10,0,0" Height="40" Width="263" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightGray">
            <ElementHost>
                <ToolBar x:Name="toolBar" ToolBarTray.IsLocked="True" Background="LightGray">
                    <Button >
                        <Image Source="images\zoomin.png" />
                    </Button>
                </ToolBar>
            </ElementHost>
        </WindowsFormsHost>
        
        <WindowsFormsHost HorizontalAlignment="Stretch" Margin="5,5,5,5" VerticalAlignment="Stretch">
            <winform:Panel Dock="Fill" BackColor="Gold"></winform:Panel>
        </WindowsFormsHost>
        
    </Grid>
</Window>
