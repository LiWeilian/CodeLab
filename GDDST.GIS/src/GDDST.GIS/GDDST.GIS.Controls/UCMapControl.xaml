        <DockPanel x:Name="dockPnl" HorizontalAlignment="Left" Height="98" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" Width="320">
            <DatePicker Height="36" Margin="0,24,0,0" VerticalAlignment="Top" Width="269"/>
        </DockPanel>
        -->
    </Grid>
</UserControl>
